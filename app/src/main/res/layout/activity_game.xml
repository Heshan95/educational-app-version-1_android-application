<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginwallpaper_second"
    tools:context=".gameActivity">


    <Button
        android:id="@+id/btn2"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_156sdp"
        android:layout_marginTop="40dp"
        android:background="@drawable/home_xy_border_radius_only_right_bottom"
        android:text="Y"
        android:textColor="@color/white"
        android:textSize="@dimen/_45sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_156sdp"
        android:layout_marginTop="40dp"
        android:background="@drawable/home_xy_border_radius_only_left_bottom"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="@dimen/_45sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/showLabel"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginTop="152dp"
        android:background="@drawable/btn_border_only_left_top"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="SHOW"
        android:textColor="#42585A"
        android:textSize="@dimen/_45sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_time" />

    <TextView
        android:id="@+id/valueLabel"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_border_only_right_top"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="VALUE"
        android:textColor="#42585A"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@+id/undo_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_time"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/exitFromGameBtn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toEndOf="@+id/jLabel1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross" />

    <TextView
        android:id="@+id/jLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_17sdp"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="NO OF ENTRIES     :"
        android:textColor="#3E3E3E"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/undo_btn"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="44dp"
        android:background="@drawable/home_xy_border_radius_only_left_bottom"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showLabel" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_17sdp"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="0"
        android:textColor="#4E4E4E"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="PREVIOUS ENTRY :"
        android:textColor="#3E3E3E"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showLabel" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="null"
        android:textAlignment="textStart"
        android:textColor="#4E4E4E"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showLabel" />

    <TextView
        android:id="@+id/project_time"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_27sdp"
        android:background="@drawable/time_duration_black_background"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="01 : 11"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/exitFromGameBtn"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/clock_time" />

    <TextView
        android:id="@+id/clock_time"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="03 : 12 : 40"
        android:textColor="#3E3E3E"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/clock_time"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add" />

</androidx.constraintlayout.widget.ConstraintLayout>